@{
    if (ViewBag.Action == "Add")
    {
        ViewBag.Title = "Add Technician";
    }
    else
    {
        ViewBag.Title = "Edit Technician";
    }
}

<h2 class="display-4">@ViewBag.Title</h2>

<div asp-validation-summary="All"></div>

<form asp-controller="Technician" asp-action="@ViewBag.Action">
    <div class="form-group">
        <label for="name">Name</label>
        <br />
        <input type="text" name="name" class="form-control" placeholder="eg. John Doe" value="" />
    </div>
    <div class="form-group">
        <label for="email">Email</label>
        <br />
        <input type="email" name="email" class="form-control" placeholder="eg. john@doe.com" value="" />
    </div>
    <div class="form-group">
        <label for="phone">Phone</label>
        <br />
        <input type="text" name="phone" class="form-control" placeholder="eg. 123-123-1234" value="" />
    </div>
    <br />
        <button class="btn btn-primary" type="submit">Save</button>
        <a class="btn btn-primary" asp-controller="Technician" asp-action="List">Cancel</a>

</form>