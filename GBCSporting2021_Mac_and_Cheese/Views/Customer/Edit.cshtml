@{
    if (ViewBag.Action == "Add")
    {
        ViewBag.Title = "Add Customer";
    }
    else
    {
        ViewBag.Title = "Edit Customer";
    }
}
<h2 class="display-4">@ViewBag.Title</h2>

<div asp-validation-summary="All"></div>

<form asp-controller="Customer" asp-action="@ViewBag.Action">
    <div class="form-group">
        <label for="fname">First Name</label>
        <input type="text" name="fname" class="form-control" placeholder="eg. John" value="" />
    </div>
    <div class="form-group">
        <label for="lname">Last Name</label>
        <input type="text" name="lname" class="form-control" placeholder="eg.Doe" value="" />
    </div>
    <div class="form-group">
        <label for="address">Address</label>
        <input type="text" name="address" class="form-control" placeholder="eg. 123 First Street" value="" />
    </div>
    <div class="form-group">
        <label for="city">City</label>
        <input type="text" name="city" class="form-control" placeholder="eg. Toronto" value="" />
    </div>
    <div class="form-group">
        <label for="state">State</label>
        <input type="text" name="state" class="form-control" placeholder="eg. Ontario" value="" />
    </div>
    <div class="form-group">
        <label for="postal">Postal Code</label>
        <input type="text" name="postal" class="form-control" placeholder="eg. M4M 4M4" value="" />
    </div>
    <div class="form-group">
        <label for="country">Country</label>
        <input type="text" name="country" class="form-control" value="" /> <!-- Please add the list of countries here as a combo box -->
    </div>
    <div class="form-group">
        <label for="email">Email</label>
        <input type="email" name="email" class="form-control" placeholder="eg. jonsnow@doamin.com" value="" />
    </div>
    <div class="form-group">
        <label for="phone">Phone</label>
        <input type="text" name="phone" class="form-control" placeholder="123-123-1234" value="" />
    </div>
    <br />
        <button class="btn btn-primary" type="submit">Save</button>
        <a class="btn btn-primary" asp-controller="Customer" asp-action="List">Cancel</a>

</form>
