@model IEnumerable<Incident>
@{
    ViewBag.Title = "";
}

<h2 class="display-4">Incident Manager</h2>
<br />
<ul class="nav nav-pills">
    <li class="nav-item"><a class="nav-link" asp-controller="Incident" asp-action="List">All Incidents</a></li>
    <li class="nav-item"><a class="nav-link" asp-controller="Incident" asp-action="ListUnassign">Unassigned Incident</a></li>
    <li class="nav-item"><a class="nav-link active" href="#">Open Incidents</a></li>
</ul>
<table class="table table-hover">
    <thead>
        <tr>
            <th>Title</th>
            <th>Customer</th>
            <th>Product</th>
            <th>Date Opened</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Incident inc in Model)
        {
            <tr>
                <td>@inc.Title</td>
                <td>@inc.Customer.CustFName @inc.Customer.CustLName</td>
                <td>@inc.Product.ProductName</td>
                <td>@inc.DateOpened.ToString("MM/dd/yyyy")</td>
                <td><a class="btn btn-primary" asp-controller="Incident" asp-action="Edit" asp-route-id="@inc.IncidentId">Edit</a></td>
                <td><a class="btn btn-primary" asp-controller="Incident" asp-action="Delete" asp-route-id="@inc.IncidentId">Delete</a></td>
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-primary" asp-controller="Incident" asp-action="Add">Add Incident</a>

