@model IEnumerable<Incident>
@{
    ViewBag.Title = "View Incidents";
}
<h2 class="display-4">Incident Manager</h2>
<br />
<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Customer</th>
            <th>Product</th>
            <th>Date Opened</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Incident inc in Model)
        {
        <tr>
            <td>@inc.Title</td>
            <td>@inc.Customer.CustFName @inc.Customer.CustLName</td>
            <td>@inc.Product.ProductName</td>
            <td>@inc.DateOpened.ToString("MM/dd/yyyy")</td>
            <td><button asp-controller="Incident" asp-action="Edit" asp-route-id="@inc.IncidentId">Edit</button></td>
            <td><button asp-controller="Incident" asp-action="Delete" asp-route-id="@inc.IncidentId">Delete</button></td>
        </tr>
        }
    </tbody>
</table>

<a asp-controller="Incident" asp-action="Add">Add Incident</a>
