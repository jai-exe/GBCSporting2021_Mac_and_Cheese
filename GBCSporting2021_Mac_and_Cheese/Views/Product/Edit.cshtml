@model Product
@{
    if (ViewBag.Action == "Add")
    {
        ViewBag.Title = "Add Product";
    }
    else
    {
        ViewBag.Title = "Edit Product";
    }
}

<h2 class="display-4">@ViewBag.Title</h2>

<div asp-validation-summary="All"></div>

<form asp-controller="Product" asp-action="@ViewBag.Action">
    <div class="form-group">
        <label asp-for="Code">Code</label>
        <br />
        <input asp-for="Code" type="text" name="code" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="ProductName">Name</label>
        <br />
        <input asp-for="ProductName" type="text" name="name" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="Price">Yearly Price</label>
        <br />
        <input asp-for="Price" type="number" name="price" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="DateReleased">Release Date</label>
        <br />
        <input asp-for="DateReleased" type="datetime" name="rDate" class="form-control"/>
    </div>
    <br />
    <input type="hidden" asp-for="ProductId" />
        <button class="btn btn-primary" type="submit">@ViewBag.Action</button>
        <a class="btn btn-primary" asp-controller="Product" asp-action="List">Cancel</a>

</form>
