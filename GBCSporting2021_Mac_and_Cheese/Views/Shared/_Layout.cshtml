<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        body{
            background-color: #efeeee !important;
            color: #325d79 !important;
        }
        .navbar{
            background-color: #f9d423 !important;
        }
        .about {
            clear: both;
            height: 50vh;
            vertical-align: middle;
            background-color: dimgray;
            color: white;
            padding: 10px;
            box-sizing: border-box;
            width: 100%;
        }
        
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">SportsPro</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item @(ViewBag.Current == "Home" ? "active" : "")">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Home <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item @(ViewBag.Current == "Product" ? "active" : "")">
                        <a class="nav-link" asp-controller="Product" asp-action="List">Products</a>
                    </li>
                    <li class="nav-item @(ViewBag.Current == "Technician" ? "active" : "")">
                        <a class="nav-link" asp-controller="Technician" asp-action="List">Technicians</a>
                    </li>
                    <li class="nav-item @(ViewBag.Current == "Customer" ? "active" : "")">
                        <a class="nav-link" asp-controller="Customer" asp-action="List">Customers</a>
                    </li>
                    <li class="nav-item @(ViewBag.Current == "Incident" ? "active" : "")">
                        <a class="nav-link" asp-controller="Incident" asp-action="List">Incidents</a>
                    </li>
                    <li class="nav-item @(ViewBag.Current == "Registration" ? "active" : "")">
                        <a class="nav-link" asp-controller="Registration" asp-action="GetCustomer">Registrations</a>
                    </li>
                </ul>
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item @(ViewBag.Current == "About" ? "active" : "")">
                        <a class="nav-link" asp-controller="Home" asp-action="About">About</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
